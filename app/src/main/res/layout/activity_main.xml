<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/pallet_status"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.honkimi.swipepalletview.SwipePalletView
        android:id="@+id/horizontal_pallet"
        custom:widthScale="0.3"
        android:background="#5526e2ff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:layout_centerInParent="true"
            android:text="Yay!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.honkimi.swipepalletview.SwipePalletView>

    <com.honkimi.swipepalletview.SwipePalletVerticalView
        android:id="@+id/vertical_pallet"
        android:visibility="gone"
        custom:heightScale="0.3"
        custom:verticalDuration="700"
        android:background="#5526e2ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerInParent="true"
            android:text="Yay!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.honkimi.swipepalletview.SwipePalletVerticalView>
</RelativeLayout>
